<?xml version="1.0" encoding="UTF-8"?>
<plannerBenchmark xmlns="https://timefold.ai/xsd/benchmark" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://timefold.ai/xsd/benchmark https://timefold.ai/xsd/benchmark/benchmark.xsd">
    <benchmarkDirectory>local/benchmarkReport</benchmarkDirectory>

    <inheritedSolverBenchmark>
        <solver>
            <environmentMode>REPRODUCIBLE</environmentMode>
            <!-- Define the model -->
            <solutionClass>lv.lu.df.combopt.domain.NavigationSolution</solutionClass>
            <entityClass>lv.lu.df.combopt.domain.Location</entityClass>
            <entityClass>lv.lu.df.combopt.domain.TaskLocation</entityClass>

            <!-- Define the score function -->
            <scoreDirectorFactory>
                <constraintProviderClass>lv.lu.df.combopt.solver.StreamCalculator</constraintProviderClass>
            </scoreDirectorFactory>

            <!-- Configure the optimization algorithms (optional) -->
            <termination>
                <secondsSpentLimit>60</secondsSpentLimit>
            </termination>

            <constructionHeuristic />
        </solver>
       <problemBenchmarks>
            <solutionFileIOClass>lv.lu.df.combopt.domain.NavigationSolutionJsonIO</solutionFileIOClass>
            <writeOutputSolutionEnabled>true</writeOutputSolutionEnabled>
            <inputSolutionFile>data/classExample5.json</inputSolutionFile>
            <!--<inputSolutionFile>data/example50.json</inputSolutionFile>
            <inputSolutionFile>data/example100.json</inputSolutionFile>
             <inputSolutionFile>data/example150.json</inputSolutionFile>-->
        </problemBenchmarks>
<!--        <subSingleCount>5</subSingleCount>-->
    </inheritedSolverBenchmark>

    <solverBenchmark>
        <name>Tabu 5 500</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <subListChangeMoveSelector />
                    <listChangeMoveSelector />
                    <listSwapMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <valueTabuSize>5</valueTabuSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>500</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>
    <solverBenchmark>
        <name>Tabu 10 1000</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <subListChangeMoveSelector />
                    <listChangeMoveSelector />
                    <listSwapMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <valueTabuSize>10</valueTabuSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>1000</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>
    <solverBenchmark>
        <name>LAHC 400</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <subListChangeMoveSelector />
                    <listChangeMoveSelector />
                    <listSwapMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <lateAcceptanceSize>400</lateAcceptanceSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>1</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>

</plannerBenchmark>